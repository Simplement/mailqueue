{
	"name": "simplement/mailqueue",
	"description": "Simple queue for outcoming mails for Nette Framework.",
	"keywords": ["mail", "queue", "nette"],
	"homepage": "https://github.com/simplement",
	"license": ["BSD-3-Clause", "GPL-2.0", "GPL-3.0"],
	"authors": [
		{
			"name": "Martin Dendis",
			"email": "martin.dendis@email.cz"
		}
	],
	"require": {
		"nette/di": "~2.3",
		"nette/mail": "~2.3",
		"tracy/tracy": "~2.3",
		"kdyby/console": "~2.3"
	},
	"require-dev": {
		"nette/neon": "~2.3",
		"nette/tester": "~1.5",
		"nette/bootstrap": "~2.3",
		"nette/application": "~2.3",
		"nette/robot-loader": "~2.3",
		"kdyby/doctrine": "~3.0"
	},
	"suggest": {
		"kdyby/doctrine": "With doctrine you can use default mail queue & don't have to implement your own."
	},
	"autoload": {
		"classmap": ["src"]
	},
	"minimum-stability": "dev"
}
